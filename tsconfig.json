{
  "extends": "expo/tsconfig.base",
  "skipLibCheck": true,
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "app/App.jsx", "**/*.tsx",
    "app/App.jsx", "**/*.jsx", "app/context/useContext.js", "app/screen/[id].js", "components/login/Paragraph.js", "components/login/TextInput.js",
  ],
  "exclude": ["node_modules"]
}
